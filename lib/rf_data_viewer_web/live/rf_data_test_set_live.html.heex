<div class="ml-1 mb-6">
  <div
    id="modal-control"
    class="hidden"
    data-open-modal={show_modal(@modal_id)}
    data-close-modal={hide_modal(@modal_id)}
  />
  <button
    phx-click="create"
    class="bg-medium-light text-slate-700 hover:bg-light rounded-full px-4 py-2 font-semibold"
  >
    Create New Data Set
  </button>
</div>

<.modal id="ds-form-container">
  <.simple_form for={@form} id="ds-form" phx-submit="save" phx-change="validate">
    <.error :if={@check_errors}>
      Please check the errors below.
    </.error>
     <.input field={@form[:name]} type="text" label="Name" required autofocus />
     <.input field={@form[:description]} type="text" label="Description" required />     
     <.input field={@form[:date]} value={@local_datetime} type="datetime-local" label="Date" required />
    <:actions>
      <.button phx-disable-with="Saving data set..." class="w-full">
        Save Data Set
      </.button>
    </:actions>
  </.simple_form>
</.modal>

<.modal id="delete-ds">
  <p class="font-bold text-center pb-3">
    Are you sure you wish to delete the following Data Set?
  </p>
  
  <dl class="divide-y grid grid-cols-2 justify-center space-x-3">
    <dt class="font-semibold text-right">Manufacturer:</dt>
    
    <dd><%= @test_set.serial_number.unit.manufacturer %></dd>
    
    <dt class="font-semibold text-right">Name:</dt>
    
    <dd><%= @test_set.serial_number.unit.name %></dd>
    
    <dt class="font-semibold text-right">Serial Number:</dt>
    
    <dd><%= @test_set.serial_number.serial_number %></dd>
    
    <dt class="font-semibold text-right">Test Set Name:</dt>
    
    <dd><%= @test_set.name %></dd>
    
    <dt class="font-semibold text-right">Test Set Location:</dt>
    
    <dd><%= @test_set.location %></dd>
    
    <dt class="font-semibold text-right">Test Set Date:</dt>
    
    <dd><%= @test_set.date %></dd>
    
    <dt class="font-semibold text-right">Data Set Name:</dt>
    
    <dd><%= @edit_ds.name %></dd>
    
    <dt class="font-semibold text-right">Data Set Date:</dt>
    
    <dd><%= @local_datetime %></dd>
  </dl>
  
  <p class="font-extrabold text-center py-3">
    All subordinate data associated with this data set will be deleted.
  </p>
  
  <div class="grid grid-cols-2">
    <button
      phx-click="confirm_delete"
      phx-value-ds_id={@edit_ds.id}
      class="bg-medium-light text-slate-700 hover:bg-medium rounded-full px-4 py-2 mx-2 font-semibold"
    >
      Delete Serial Number
    </button>
    
    <button
      phx-click="cancel_delete"
      class="bg-medium-light text-slate-700 hover:bg-medium rounded-full px-4 py-2 mx-2 font-semibold"
    >
      Cancel
    </button>
  </div>
</.modal>

<div class="relative overflow-x-auto mb-5 rounded-lg">
  <table class="w-full text-sm text-left text-slate-700">
    <thead class="text-xs uppercase bg-medium-light">
      <tr>
        <th scope="col" class="px-6 py-3">
          Manufacturer
        </th>
        
        <th scope="col" class="px-6 py-3">
          Model
        </th>
        
        <th scope="col" class="px-6 py-3">
          Description
        </th>
        
        <th scope="col" class="px-6 py-3">
          Serial Number
        </th>
        
        <th scope="col" class="px-6 py-3">
          Test Set
        </th>
        
        <th scope="col" class="px-6 py-3">
          Data Sets
        </th>
        
        <th scope="col" class="px-6 py-3">
          Test Data
        </th>
      </tr>
    </thead>
    
    <tbody>
      <tr class="bg-light border-b font-medium">
        <td class="px-6 py-4">
          <%= @test_set.serial_number.unit.manufacturer %>
        </td>
        
        <td class="px-6 py-4">
          <.link
            navigate={~p"/rf/units/unit/#{@test_set.serial_number.rf_unit_id}"}
            class="underline hover:text-slate-500"
          >
            <%= @test_set.serial_number.unit.name %>
          </.link>
        </td>
        
        <td class="px-6 py-4">
          <%= @test_set.serial_number.unit.description %>
        </td>
        
        <td class="px-6 py-4">
          <.link
            navigate={~p"/rf/units/sn/#{@test_set.serial_number.id}"}
            class="underline hover:text-slate-500"
          >
            <%= @test_set.serial_number.serial_number %>
          </.link>
        </td>
        
        <td class="px-6 py-4">
          <%= "#{@test_set.name} @ #{@test_set.location}" %>
        </td>
        
        <td class="px-6 py-4">
          <%= @data_set_count %>
        </td>
        
        <td class="px-6 py-4">
          <%= @data_count %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<div class="relative overflow-x-auto rounded-lg">
  <table class="w-full text-sm text-left text-slate-700">
    <thead class="text-xs uppercase bg-medium-light">
      <tr>
        <th scope="col" class="px-6 py-3">
          Name
        </th>
        
        <th scope="col" class="px-6 py-3">
          Date
        </th>
        
        <th scope="col" class="px-6 py-3">
          Description
        </th>
        
        <th scope="col" class="px-6 py-3">
          Gain Measurements
        </th>
        
        <th scope="col" class="px-6 py-3">
          VSWR Measurements
        </th>
         <th scope="col" class="px-6 py-3" />
      </tr>
    </thead>
    
    <tbody>
      <%= for {data_set, gain_count, vswr_count, date_local} <- @data_sets do %>
        <tr Key={data_set.id} class="bg-light border-b font-medium">
          <td class="px-6 py-4">
            <div class="flex space-x-2">
              <button phx-click="edit" phx-value-ds_id={data_set.id}>
                <img src="/images/edit-button.svg" class="w-4" />
              </button>

            <.link
              navigate={~p"/rf/data/data_set/#{data_set.id}"}
              class="underline hover:text-slate-500"
            >
              <%= data_set.name %>
            </.link>
            </div>
          </td>
          
          <td class="px-6 py-4">
            <%= date_local %>
          </td>
          
          <td class="px-6 py-4">
            <%= data_set.description %>
          </td>
          
          <td class="px-6 py-4">
            <%= gain_count %>
          </td>
          
          <td class="px-6 py-4">
            <%= vswr_count %>
          </td>
          
          <td class="px-6 py-4">
            <button phx-click="delete" phx-value-ds_id={data_set.id}>
              <img src="/images/delete-button.svg" class="w-4" />
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
